# BigQuery Analytics AI Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ============================
# REQUIRED: BIGQUERY SETTINGS
# ============================

# Google Cloud Project ID (required)
GCP_PROJECT_ID=gac-prod-471220

# BigQuery Dataset name (required)
BQ_DATASET=agent_bq_dataset

# Google Cloud Service Account Key Path (required for production)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# ============================
# REQUIRED: LLM PROVIDERS
# ============================
# Configure at least one LLM provider

# Anthropic Claude (recommended)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google Gemini (optional)
# GEMINI_API_KEY=your-gemini-key-here

# OpenAI GPT (optional)
# OPENAI_API_KEY=your-openai-key-here

# Default LLM Provider (anthropic | gemini | openai)
DEFAULT_LLM_PROVIDER=anthropic

# ============================
# SERVER CONFIGURATION
# ============================

# Backend API Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8010

# Frontend Gradio Server
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=7860

# ============================
# PERFORMANCE SETTINGS
# ============================

# Agent Configuration (prevents timeouts)
AGENT_MAX_ITERATIONS=50
AGENT_MAX_EXECUTION_TIME=120.0

# API Request timeout in seconds
API_TIMEOUT=120

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600

# ============================
# LOGGING & MONITORING
# ============================

# Log Level (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO

# Log Format (json | text)
LOG_FORMAT=json

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================
# SECURITY SETTINGS
# ============================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:7860,https://your-domain.com

# API Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Enable authentication (true | false)
ENABLE_AUTH=false

# JWT Secret (required if ENABLE_AUTH=true)
# JWT_SECRET=your-secret-key

# ============================
# OPTIONAL: ADVANCED SETTINGS
# ============================

# Database connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Visualization settings
MAX_CHART_DATA_POINTS=1000
CHART_RENDER_TIMEOUT=30

# Environment (development | staging | production)
ENVIRONMENT=production