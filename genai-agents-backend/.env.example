# BigQuery Analytics AI Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ====================
# Google Cloud Settings
# ====================
GCP_PROJECT_ID=your-gcp-project-id
BQ_DATASET=agent_bq_dataset
# Service account JSON (optional - uses default credentials if not provided)
# GCP_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "...", ...}

# ====================
# LLM Provider API Keys (At least one required)
# ====================
# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key-here

# Google Gemini
GEMINI_API_KEY=your-gemini-key-here

# OpenAI GPT
OPENAI_API_KEY=your-openai-key-here

# ====================
# Arctic Local LLM (Optional - for local SQL generation)
# ====================
# Ollama endpoint for Arctic-Text2SQL
ARCTIC_BASE_URL=http://localhost:11434
ARCTIC_MODEL_NAME=arctic-text2sql

# ====================
# LLM Configuration
# ====================
# Active provider: anthropic, gemini, openai, or arctic
LLM_PROVIDER=arctic

# Default provider for fallback
DEFAULT_LLM_PROVIDER=arctic

# Model versions (optional - uses defaults if not set)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# GEMINI_MODEL=gemini-pro
# OPENAI_MODEL=gpt-4
# ARCTIC_MODEL=arctic-text2sql

# ====================
# Agent Configuration
# ====================
# Maximum reasoning steps (default: 30)
AGENT_MAX_ITERATIONS=30

# Maximum execution time in seconds (default: 60.0)
AGENT_MAX_EXECUTION_TIME=60.0

# ====================
# Cache Configuration
# ====================
# Enable caching (default: true)
ENABLE_CACHE=true

# Cache time-to-live in seconds (default: 3600)
CACHE_TTL=3600

# ====================
# API Configuration
# ====================
# API host and port
API_HOST=0.0.0.0
API_PORT=8010

# CORS origins (comma-separated)
CORS_ORIGINS=*

# ====================
# Logging
# ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# ====================
# Development Settings
# ====================
# Debug mode (default: false)
DEBUG=false

# Environment: local, stage, prod
ENV=local